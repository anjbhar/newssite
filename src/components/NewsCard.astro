---
// src/components/NewsCard.astro
export interface Props {
    title: string;
    time: string;
    imageUrl?: string;
    slug: string;
    author?: string;
    category?: string;
}

const { title, time, imageUrl, slug, author, category } = Astro.props;
---

<a href={`/news/${slug}`} class="block bg-slate-100 dark:bg-slate-800 rounded-lg p-4 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors duration-200">
    <article class="flex space-x-4 min-h-32">
        {imageUrl && (
            <div class="flex-shrink-0 w-32 h-32">
                <img src={imageUrl} alt={title} class="w-full h-full object-cover rounded-md" />
            </div>
        )}
        <div class="flex-grow">
            <h2 class="text-xl font-bold mb-2">{title}</h2>
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                {author && <span>{author} &#8226; </span>}
                <span>{time}</span>
                {category && (
                    <>
                        <span class="mx-2">&#8226;</span>
                        <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">{category}</span>
                    </>
                )}
            </div>
        </div>
    </article>
</a>
