---
// src/components/NewsCard.astro
export interface Props {
    title: string;
    time: string;
    imageUrl?: string;
    slug: string;
}

const { title, time, imageUrl, slug } = Astro.props;
---

<a href={`/news/${slug}`} class="block bg-slate-100 dark:bg-slate-800 rounded-lg p-4 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors duration-200">
    <article class="flex space-x-4">
        <div class="flex-shrink-0 w-32 h-32">
            {imageUrl ? (
                <img src={imageUrl} alt={title} class="w-full h-full object-cover rounded-md" />
            ) : (
                <div class="w-full h-full rounded-md bg-slate-200 dark:bg-slate-700 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-slate-400 dark:text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
            )}
        </div>
        <div class="flex-grow">
            <h2 class="text-xl font-bold mb-2">{title}</h2>
            <div class="text-sm text-gray-500 dark:text-gray-400">
                <span>{time}</span>
            </div>
        </div>
    </article>
</a>
